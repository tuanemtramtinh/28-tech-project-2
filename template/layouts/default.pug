doctype html
html
  head
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css")
    link(rel="stylesheet", href="assets/css/style.css")
    block title

  body
    
    //- Header
    header.header
      .container
        .header__wrap
          button.header__button-menu
            i.fa-solid.fa-bars

          .header__logo
            a(href="/")
              img(src="assets/images/logo.svg" alt="Monito")
          
          nav.header__menu
            ul
              li
                a(href="/") Trang Chủ
              li
                a(href="#") Danh Mục
              li
                a(href="#") Giới Thiệu
              li
                a(href="#") Liên Hệ
          
          .header__search
            form
              button
                i.fa-solid.fa-magnifying-glass
              input(type="text" placeholder="Nhập từ khóa...")
          
          a(href="#" class="button button--primiry") Tham Gia Cộng Đồng

          button.header__button-search
            i.fa-solid.fa-magnifying-glass
    //- End Header

    block main

    //- Footer
    footer.footer
      .container
        .footer__top
          h3.footer__title Đăng ký ngay để không bỏ lỡ các chương trình của chúng tôi
          form(action="" class="footer__form")
            input(type="email" placeholder="Nhập email của bạn...")
            button(type="submit") Đăng Ký Ngay
        .footer__middle
          nav.footer__menu
            ul
              li
                a(href="/") Trang Chủ
              li
                a(href="#") Danh Mục
              li
                <a href="#">Giới Thiệu
              li
                a(href="#") Liên Hệ
          nav.footer__socials
            ul
              li
                a(href="#" target="_blank") <i class="fa-brands fa-facebook"></i>
              li
                a(href="#" target="_blank") <i class="fa-brands fa-x-twitter"></i>
              li
                a(href="#" target="_blank") <i class="fa-brands fa-instagram"></i>
              li
                a(href="#" target="_blank") <i class="fa-brands fa-youtube"></i>
        .footer__bottom
          .footer__copyright © 2023 28Tech. All rights reserved.
          .footer__logo
            a(href="/")
              img(src="assets/images/logo.svg")
          nav.footer__links
            ul
              li
                a(href="#") Điều khoản dịch vụ
              li
                a(href="#") Chính sách bảo mật
    //- End Footer